<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StartPageActivity"
    android:gravity="center"
    android:background="#D63434">

    <TextView
        android:id="@+id/textView"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="150dp"
        android:layout_marginEnd="150dp"
        android:text="Already a user?"
        android:fontFamily="@font/helveticaneue_light"
        android:textColor="#fff"/>

    <EditText
        android:id="@+id/editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="100dp"
        android:inputType="textEmailAddress"
        android:layout_below="@+id/textView"
        android:layout_marginTop="20dp"
        android:hint="Email"
        android:fontFamily="@font/helveticaneuebd"
        android:textColor="#fff"
        android:textColorHint="#fff"/>

    <EditText
        android:id="@+id/editText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPassword"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="100dp"
        android:layout_below="@+id/editText"
        android:layout_marginTop="20dp"
        android:hint="Password"
        android:fontFamily="@font/helveticaneuebd"
        android:textColor="#fff"
        android:textColorHint="#fff"/>

    <Button
        android:id="@+id/button2"
        android:layout_width="167dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText2"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="133dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="133dp"
        android:text="Login Using Email"
        android:background="#DF2518"
        android:gravity="center"
        android:textColor="#fff"
        android:fontFamily="@font/helveticaneuebd"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="150dp"
        android:layout_height="24dp"
        android:layout_below="@+id/button2"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="134dp"
        android:layout_marginTop="27dp"
        android:layout_marginEnd="134dp"
        android:text="New User? Click Here"
        android:textColor="#fff"
        android:fontFamily="@font/helveticaneue_light"/>

</RelativeLayout>