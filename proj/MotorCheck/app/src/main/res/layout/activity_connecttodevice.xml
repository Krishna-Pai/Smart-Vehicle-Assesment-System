<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D63434"
    android:layout_gravity="center">

    <TextView
        android:id="@+id/dispmsg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/helveticaneue_medium"
        android:padding="30sp"
        android:text="Attempting to connect to the bluetooth device."
        android:textColor="#fff"
        android:textSize="20dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/helveticaneuebd"
        android:text="Attempts:"
        android:id="@+id/attid"
        android:textColor="#fff"
        android:layout_below="@+id/dispmsg"
        android:padding="10sp"
        android:layout_marginStart="150sp"
        android:textSize="30sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/helveticaneue_light"
        android:text="Status:"
        android:id="@+id/statusid"
        android:textColor="#fff"
        android:layout_below="@+id/attid"
        android:padding="10sp"
        android:layout_marginStart="150sp"
        android:textSize="30sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/helveticaneue_light"
        android:text="Commands not yet executed."
        android:id="@+id/atid"
        android:textColor="#fff"
        android:layout_below="@+id/statusid"
        android:padding="10sp"
        android:layout_marginStart="150sp"
        android:textSize="30sp"/>


    <ProgressBar
        android:id="@+id/progressBar"
        android:indeterminateDrawable="@drawable/progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/atid"
        android:layout_marginStart="150sp"
        android:padding="20sp" />

    <TextView
        android:id="@+id/tid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/progressBar"
        android:layout_marginStart="150sp"
        android:layout_marginTop="0dp"
        android:fontFamily="@font/helveticaneue_light"
        android:padding="20sp"
        android:text="Executing commands..."
        android:textColor="#fff"
        android:textSize="20sp" />

</RelativeLayout>
